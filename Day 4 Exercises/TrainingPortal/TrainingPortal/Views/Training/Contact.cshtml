@{
    ViewData["Title"] = "Contact";
}

<div class="container my-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Get in Touch</h2>
        <p class="text-muted">
            We’re here to help you with training, placements, and related queries.
        </p>
    </div>

    <div class="row g-4">
        <!-- Contact Information -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Contact Information</h5>

                    <div class="mb-3">
                        <h6 class="mb-1">📧 Email</h6>
                        <p class="text-muted mb-0">
                            training@chandigarhuniversity.com
                        </p>
                    </div>

                    <div class="mb-3">
                        <h6 class="mb-1">📞 Phone</h6>
                        <p class="text-muted mb-0">
                            +91 70007 10001
                        </p>
                    </div>

                    <div>
                        <h6 class="mb-1">📍 Address</h6>
                        <p class="text-muted mb-0">
                            Training & Placement Department<br />
                            Chandigarh University
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Message Section (Optional but Professional) -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Quick Message</h5>

                    <p class="text-muted">
                        For any academic or placement-related assistance, feel free to
                        reach out to us via email or phone. Our team will respond at the earliest.
                    </p>

                    <div class="alert alert-info mb-0">
                        Office Hours:<br />
                        <strong>Monday – Friday</strong><br />
                        9:00 AM – 5:00 PM
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

